<h1>New Product</h1>

<%= form_with(model: @product) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="actions">
    <%= f.submit '保存' %>
  </div>
<% end %>

<%= link_to 'Back', products_path %>