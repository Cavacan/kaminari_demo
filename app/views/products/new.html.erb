<div class="container">
  <div class="row">
    <h1>New Product</h1>
  </div>
  
  <div class="row">
    <%= form_with(model: @product) do |f| %>
    <div class="field">
      <div class="col-1">
        <%= f.label :name %>
      </div>
      <div class="col-3">
        <%= f.text_field :name %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <div class="col-1">
        <%= f.label :price %>
      </div>
      <div class="col-4">
        <%= f.text_field :price %>
      </div>
    </div>

    <div class="actions col-2">
      <%= f.submit '保存' %>
    </div>
  <% end %>
  </div>
  <div class="row">
    <%= link_to 'Back', products_path %>
  </div>
</div>

