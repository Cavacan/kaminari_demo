<div class="container">
  <h1><%= t('.login') %> </h1>
  <%= form_with url: login_path do |f| %>
    <div class="row my-2">
      <div class="col-md-3"><%= f.label t('.email') %></div>
      <div class="col"><%= f.email_field :email, class: 'form-control' %></div>
    </div>
    
    <div class="row my-2">
      <div class="col-md-3"><%= f.label t('.password') %></div>
      <div class="col"><%= f.password_field :password, class: 'form-control' %></div>
    </div>

    <div class="row my-2">
      <div class="col-md-3"><%= f.label t('.password_confirmation') %></div>
      <div class="col"><%= f.password_field :password_confirmation, class: 'form-control' %></div>
    </div>

    <div class="row my-2">
      <div class="col">
        <%= f.submit t('.login'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
  <div class="row my-2">
    <h3><%= link_to t('.top'), products_path %></h3>
  </div>
</div>
